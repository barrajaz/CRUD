<h2 class="center">Course Table</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name:</th>
            <th>Email</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% courses.forEach(course => { %>
            <tr>
                <td>
                    <a href="<%= `/courses/$course._id` %>">
                        <%= course.title %>
                    </a>
                </td>
                <td>
                    <%= course.description %>
                </td>
                <td>
                    <%= course.MaxStudents %>
                </td>
                <td>
                    <%= course.cost %>
                </td>
                <td>
                    <a href="<%= `/course/${course._id}/edit` %>" onclick="return confirm(`Are you sure?`)">
                        Edit
                    </a>
                </td>
                <td>
                    <a href="<%= `/course/${course._id}delete?_method=DELETE` %>" onclick="return confirm(`Are you sure?`)">
                        Delete
                    </a>
                </td>
            </tr>
            <% }) %>
    </tbody>
</table>