<div class="form-data">
    <form action="/courses/${course._id}/update?_method=PUT" method="POST">
        <label for="txtTitle">Title</label>
        <input type="text" name="title" id="txtTitle" autofocus required value="<%= course.title% ">
        <label for="txtDescription">Course Description</label>
        <input type="text" name="description" id="txtDescription" required value="<%= course.description %">
        <label for="NMaxStu">Max Students</label>
        <input type="number" name="maxStu" id="NMaxStu" required value="<%= course.MaxStudents %">
        <label for="Ncost">Cost</label>
        <input type="number" name="cost" id="Ncost" required value="<%= course.cost %">
        <button type="submit">Save</button>  
    </form>
</div>